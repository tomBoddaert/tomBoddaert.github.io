{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "extends": [
    "./.eslintrc.json"
  ],
  "plugins": [
    "html"
  ],
  "overrides": [
    {
      "files": [
        "*.html"
      ]
    }
  ],
  "ignorePatterns": [
    "pages/main/index.html",
    "pages/main/projects.html"
  ],
  "settings": {
    "html/indent": "+2",
    "html/report-bad-indent": "error"
  }
}
